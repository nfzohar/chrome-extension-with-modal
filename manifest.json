{
  "manifest_version": 3,
  "name": "Extension template",
  "description": "Extension with modal template",
  "author": "nfzohar",
  "version": "1.0",
  "action": {
    "default_title": "Extension with modal template"
  },
  "icons": {
    "16": "res/icon/16x16.png",
    "32": "res/icon/32x32.png",
    "48": "res/icon/48x48.png"
  },
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "res/clickHandler.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["res/content/html/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
